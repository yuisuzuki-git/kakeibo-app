datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String

  items    Item[]
}

model Item {
  id        Int      @id @default(autoincrement())
  userid    Int
  amount    Int
  type      String   // "income" or "expense"
  event     String   // 項目名
  memo      String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userid], references: [id])
}
